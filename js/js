const bgm = document.getElementById("bgm");
const btn = document.getElementById("music-toggle");

let playing = false;

btn.onclick = () => {
  if (!playing) {
    bgm.volume = 0.3;
    bgm.play();
    btn.textContent = "â¸";
  } else {
    bgm.pause();
    btn.textContent = "ğŸµ";
  }
  playing = !playing;
};
